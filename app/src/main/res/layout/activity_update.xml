<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateActivity">

    <Button
        android:id="@+id/btn_Update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginTop="276dp"
        android:text="update"
        android:onClick="doUpdate"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eoldpno" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="239dp"
        android:layout_height="67dp"
        android:layout_marginStart="86dp"
        android:layout_marginTop="16dp"
        android:text="UPDATE"
        android:textSize="30dp"
        android:textColor="#AF0F00"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/eoldpno"
        android:layout_width="349dp"
        android:layout_height="82dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Enter phone number"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/eUpdate"
        android:layout_width="346dp"
        android:layout_height="80dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="enter vname / rno / pno"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eoldpno" />

    <EditText
        android:id="@+id/enewpno"
        android:layout_width="340dp"
        android:layout_height="81dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Enter new column"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eUpdate" />
</androidx.constraintlayout.widget.ConstraintLayout>